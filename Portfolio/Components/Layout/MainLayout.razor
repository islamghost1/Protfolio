@inherits LayoutComponentBase
@inject NavigationManager MyNavigationManager;
<div class="page" >
    <main >
        <div class="top-row px-4 header bg-dark" >
            <a class="d-flex  w-100 text-decoration-none text-body-emphasis"  href="/">
                <img src="/src/logo.svg" style="width:60px;height:55px"  />
                <h3 class="mt-3 fw-bolder">.NET DEV <span style="font-size:10px">SISSAOUI ISLAM</span></h3>
            </a>
            @{
                string uri = MyNavigationManager.Uri;
            }
            @if (uri.Contains("/Modify"))
            {
                <LoginControl />
            }
         

        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
