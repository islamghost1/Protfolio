@page "/Modify"
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@rendermode InteractiveServer
<AuthorizeView Roles="Admin">
    <Authorized>

        <title>Edit CV</title>
        <button class="btn btn-outline-secondary btn-sm" @onclick=Preview><Icon Name="IconName.Eye" /></button>
        <div class="container ">
            <!--Image & user name-->
            <ImageNUserName />
            <!--WORK EXPERIENCE-->
            <div class="row mt-3">
                <WorkExperience IsPreview="@IsPreview" />
                <!--SKILLS-->
                <div class="col-md-6">
                    <UserSkills IsPreview="@IsPreview" />
                    <!--EDUCATION-->
                    <UserEducation IsPreview="@IsPreview" />
                </div>
            </div>

        </div>
        <div class="footer mt-1 pb-5 text-body-secondary">
            <hr/>
            <div class="d-flex justify-content-center  ">
                <div class="row justify-content-center  ">
                    <div class="d-flex justify-content-center">
                        <a href = "https://www.linkedin.com/in/islam-s-b54805178/" class="text-decoration-none text-body-emphasis"> <i  class="devicon-linkedin-plain fs-3 me-2"/>  </a>
                        <a href = "https://github.com/islamghost1" class="text-decoration-none text-body-emphasis"><i class="devicon-github-original fs-3"></i></a>
                    </div>
                    <div class="d-flex justify-content-center">
                    <span class="fs-6">Made with  <i class="fa-solid fa-mug-hot"></i> by @@ISLAM.SCR </span>

                    </div>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="container">

            <div class="row text-center" style="min-height: 500px;">
                <p class="fs-3 fw-bolder row">
                    <Icon Name="IconName.HandPaper" IconSize="IconSize.x4" Class="text-danger " />

                    <span>Why did the hacker bring a ladder to work?</span>
                    <span> He wanted to make sure his access was on the up-and-up! </span>
                    <span class="fs-6 text-primary">"AI generated jokes"</span>

                </p> 

            </div>
        </div>


    </NotAuthorized>
</AuthorizeView>
